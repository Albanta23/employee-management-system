{
  "name": "employee-management-system",
  "version": "1.0.0",
  "description": "Sistema completo de gesti√≥n de trabajadores con dashboard interactivo",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "import-data": "node src/database/import.js",
    "migrate-to-mongo": "node scripts/migrate-to-mongo.js",
    "generate-employee-logins": "node scripts/generate-employee-logins.js",
    "sync-mongo-users": "node scripts/sync-mongo-users.js",
    "reset-password:mongo": "node scripts/reset-mongo-user-password.js",
    "change-password": "node scripts/change-password.js",
    "backup": "node scripts/backup.js",
    "backup:mongo": "node scripts/backup.js --type=mongo --verify=true",
    "backup:sqlite": "node scripts/backup.js --type=sqlite",
    "backup:schedule": "node scripts/backup-scheduler.js",
    "restore": "node scripts/restore.js",
    "restore:mongo": "node scripts/restore.js --type=mongo --verify=true",
    "seed-locations-from-employees": "node scripts/seed-locations-from-employees.js",
    "android:sync": "npx cap sync android",
    "android:open": "npx cap open android",
    "android:apk": "npx cap sync android && cd android && (if exist gradlew.bat (gradlew.bat assembleDebug) else (./gradlew assembleDebug))",
    "android:aab": "npx cap sync android && cd android && (if exist gradlew.bat (gradlew.bat bundleRelease) else (./gradlew bundleRelease))"
    ,
    "generate:portal-empleado-pdf": "node scripts/generate-portal-empleado-pdf.js",
    "vacation:rollover": "node scripts/rollover-vacation-carryover.js",
    "vacation:rollover:schedule": "node scripts/vacation-rollover-scheduler.js"
  },
  "keywords": [
    "employee",
    "management",
    "dashboard",
    "hr"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/filesystem": "^8.0.0",
    "@capacitor/share": "^8.0.0",
    "@capgo/capacitor-native-biometric": "^8.0.3",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.2",
    "node-cron": "^3.0.3",
    "pdfkit": "^0.17.2",
    "sqlite3": "^5.1.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.0"
  }
}
